<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SCHOOL2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SCHOOL2"
    xmlns:views="clr-namespace:SCHOOL2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SCHOOL2">
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"/>
        <ShellContent
            Title="Activities"
            ContentTemplate="{DataTemplate views:ActivityPage}"/>
        <ShellContent
            Title="Teachers"
            ContentTemplate="{DataTemplate views:TeacherPage}"/>
        <ShellContent
            Title="Students"
            ContentTemplate="{DataTemplate views:StudentPage}"/>
    </TabBar>
    

</Shell>
