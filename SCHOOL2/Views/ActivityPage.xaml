<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="SCHOOL2.Views.ActivityPage"
			 Title="Activity Page">
    <ScrollView>
        <StackLayout>
            <Label Text="Add Activity" FontSize="Large" HorizontalOptions="Center" Margin="0,15,0,30" FontAttributes="Bold"/>
            <StackLayout WidthRequest="250" Spacing="10">
                <Entry x:Name="entryName" Placeholder="Name" />
                <Entry x:Name="entryECTS" Placeholder="ECTS" />
                <Picker Title="Select teacher"
                ItemsSource="{Binding AllTeachers}"
                ItemDisplayBinding="{Binding DisplayName}"
                SelectedItem="{Binding SelectedTeacher}"
                WidthRequest="250"/>

                <Button Text="Add Activity" Clicked="OnAddActivityClicked" BackgroundColor="DodgerBlue" Margin="0, 10, 10, 0"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
    
<!--SelectedIndexChanged="OnTeacherSelected"-->